span class="line">    &lt;h2&gt; 商品列表 &lt;<span class="regexp">/h2&gt;</span></span><br><span class="line"><span class="regexp">    &lt;proList&gt;&lt;/</span>proList&gt;</span><br><span class="line">    &lt;br&gt;</span><br><span class="line">    &lt;proCard&gt;&lt;/proCard&gt;</span><br><span class="line">    &lt;br&gt;</span><br><span class="line">  &lt;<span class="regexp">/div&gt;</span></span><br><span class="line"><span class="regexp">&lt;/</span>template&gt;</span><br><span class="line">&lt;script&gt;</span><br><span class="line"><span class="keyword">import</span> proList <span class="keyword">from</span> <span class="string">'./proList.vue'</span></span><br><span class="line"><span class="keyword">import</span> proCard <span class="keyword">from</span> <span class="string">'./proCard.vue'</span></span><br><span class="line"><span class="keyword">export</span> <span class="keyword">default</span> &#123;</span><br><span class="line">  components: &#123; proList, proCard &#125;,</span><br><span class="line">  data () &#123;</span><br><span class="line">    <span class="keyword">return</span> &#123;</span><br><span class="line">      produtions: <span class="built_in">JSON</span>.parse(<span class="built_in">window</span>.localStorage.getItem(<span class="string">'card'</span>)) || []</span><br><span class="line">    &#125;</span><br><span class="line">  &#125;,</span><br><span class="line">  computed: &#123;</span><br><span class="line">    getALLTotal () &#123;</span><br><span class="line">      <span class="keyword">let</span> total = <span class="number">0</span></span><br><span class="line">      <span class="keyword">this</span>.produtions.forEach(<span class="function"><span class="params">item</span> =&gt;</span> &#123;</span><br><span class="line">        total += (item.price * item.num)</span><br><span class="line">      &#125;)</span><br><span class="line">      <span class="keyword">return</span> total</span><br><span class="line">    &#125;</span>